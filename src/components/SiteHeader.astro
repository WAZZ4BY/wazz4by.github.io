---
interface Props {
  variant?: 'home' | 'inner';
}

const { variant = 'inner' } = Astro.props;
const base = import.meta.env.BASE_URL;
const pathname = Astro.url.pathname;
const pathWithoutBase = pathname.replace(new RegExp('^' + base.replace(/\/$/, '') + '\\/?'), '') || '';
const currentPath = pathWithoutBase.replace(/^\/+|\/+$/g, '') || '/';
---

<header class="site-header">
  <div class="site-header__container">
    <div class="site-header__left">
      <a href={base === '/' ? '/' : base}>Vasily Aleev</a>
    </div>
    
    <nav class="site-header__center">
      {variant === 'home' ? (
        <>
          <a href={`${base}index`} class="nav-link nav-link--home">Index</a>
          <span class="nav-separator">, </span>
          <a href={`${base}research`} class="nav-link nav-link--home">Research</a>
          <span class="nav-separator">, </span>
          <a href={`${base}me`} class="nav-link nav-link--home">Me</a>
        </>
      ) : (
        <>
          <a 
            href={`${base}index`} 
            class={`nav-link ${currentPath === 'index' || currentPath.startsWith('index/') ? 'active' : ''}`}
          >
            Index
          </a>
          <span class="nav-separator">, </span>
          <a 
            href={`${base}research`} 
            class={`nav-link ${currentPath === 'research' || currentPath.startsWith('research/') ? 'active' : ''}`}
          >
            Research
          </a>
          <span class="nav-separator">, </span>
          <a 
            href={`${base}me`} 
            class={`nav-link ${currentPath === 'me' ? 'active' : ''}`}
          >
            Me
          </a>
        </>
      )}
    </nav>
    
    <div class="site-header__right">
      <a href="https://t.me/schtab_kvartira" target="_blank" rel="noopener noreferrer" class="site-header__right-link">SCHK</a>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    inset: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .site-header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0;
    pointer-events: none;
  }

  .site-header__left {
    flex: 0 0 auto;
    pointer-events: auto;
    text-align: left;
    padding-left: 30px;
  }

  .site-header__center {
    flex: 1;
    pointer-events: auto;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .site-header__right {
    flex: 0 0 auto;
    pointer-events: auto;
    text-align: right;
    padding-right: 30px;
    display: flex;
    justify-content: flex-end;
    align-items: center;
  }

  .site-header__left a {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
  }

  /* Home page specific styles */
  body.is-home .site-header__left a {
    font-size: 24px;
    font-weight: 400;
  }


  .site-header__center .nav-link {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
    transition: font-family 0.2s, font-style 0.2s, font-weight 0.2s;
  }

  .site-header__center .nav-link--home {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: black;
  }

  .site-header__center .nav-link--home:hover {
    font-family: 'ORG66', sans-serif;
    font-style: italic;
    font-weight: 700;
  }

  .site-header__center .nav-link.active {
    font-family: 'ORG66', sans-serif;
    font-style: italic;
    font-weight: 700;
    font-size: 16px;
  }

  .site-header__center .nav-link:not(.nav-link--home):hover {
    opacity: 0.6;
  }

  .site-header__center .nav-separator {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
  }


  .site-header__right-link {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
    color: inherit;
    text-decoration: none;
    transition: opacity 0.2s;
  }

  .site-header__right-link:hover {
    opacity: 0.7;
  }

  /* Home page specific styles */
  body.is-home .site-header__right-link {
    font-size: 24px;
    font-weight: 400;
  }

  @media (max-width: 768px) {
    .site-header__container {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .site-header__left {
      padding-left: 0;
      width: 100%;
      text-align: center;
    }

    .site-header__right {
      padding-right: 0;
      width: 100%;
      text-align: center;
    }

    .site-header__center {
      order: 2;
      width: 100%;
      justify-content: center;
      gap: 0;
    }
  }
</style>
