---
interface Props {
  variant?: 'home' | 'inner';
}

const { variant = 'inner' } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname.replace(base, '') || '/';
---

<header class="site-header">
  <div class="site-header__container">
    <div class="site-header__left">
      <a href={`${base}`}>Vasily Aleev</a>
    </div>
    
    <nav class="site-header__center">
      <a 
        href={`${base}index`} 
        class={currentPath === '/index' || currentPath.startsWith('/index') ? 'active' : ''}
      >
        Index
      </a>
      <a 
        href={`${base}research`} 
        class={currentPath === '/research' || currentPath.startsWith('/research') ? 'active' : ''}
      >
        Research
      </a>
      <a 
        href={`${base}me`} 
        class={currentPath === '/me' ? 'active' : ''}
      >
        Me
      </a>
    </nav>
    
    <div class="site-header__right">
      <span>SCHK</span>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    inset: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .site-header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 1.5rem 2rem;
    pointer-events: none;
  }

  .site-header__left,
  .site-header__center,
  .site-header__right {
    flex: 1;
    pointer-events: auto;
  }

  .site-header__left {
    text-align: left;
  }

  .site-header__center {
    display: flex;
    justify-content: center;
    gap: 2rem;
  }

  .site-header__right {
    text-align: right;
  }

  .site-header__center a {
    transition: opacity 0.2s;
  }

  .site-header__center a:hover {
    opacity: 0.6;
  }

  .site-header__center a.active {
    font-weight: 600;
  }

  @media (max-width: 768px) {
    .site-header__container {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }


    .site-header__left,
    .site-header__right {
      width: 100%;
      text-align: center;
    }

    .site-header__center {
      order: 2;
      width: 100%;
      justify-content: center;
      gap: 1rem;
    }
  }
</style>
