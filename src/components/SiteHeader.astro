---
interface Props {
  variant?: 'home' | 'inner';
}

const { variant = 'inner' } = Astro.props;
const base = import.meta.env.BASE_URL;
const currentPath = Astro.url.pathname.replace(base, '') || '/';
---

<header class="site-header">
  <div class="site-header__container">
    <div class="site-header__left">
      <a href={`${base}`}>Vasily Aleev</a>
    </div>
    
    <nav class="site-header__center">
      <a 
        href={`${base}index`} 
        class={`nav-link ${currentPath === '/index' || currentPath.startsWith('/index') ? 'active' : ''}`}
      >
        Index
      </a>
      <span class="nav-separator">, </span>
      <a 
        href={`${base}research`} 
        class={`nav-link ${currentPath === '/research' || currentPath.startsWith('/research') ? 'active' : ''}`}
      >
        Research
      </a>
      <span class="nav-separator">, </span>
      <a 
        href={`${base}me`} 
        class={`nav-link ${currentPath === '/me' ? 'active' : ''}`}
      >
        Me
      </a>
    </nav>
    
    <div class="site-header__right">
      <span>schk</span>
    </div>
  </div>
</header>

<style>
  .site-header {
    position: fixed;
    inset: 0;
    z-index: 1000;
    pointer-events: none;
  }

  .site-header__container {
    display: flex;
    justify-content: space-between;
    align-items: center;
    width: 100%;
    padding: 0;
    pointer-events: none;
  }

  .site-header__left,
  .site-header__center,
  .site-header__right {
    flex: 1;
    pointer-events: auto;
  }

  .site-header__left {
    text-align: left;
    padding-left: 30px;
  }

  .site-header__left a {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: bold;
    font-size: 16px;
  }

  .site-header__center {
    display: flex;
    justify-content: center;
    align-items: center;
    gap: 0;
  }

  .site-header__center .nav-link {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
    transition: opacity 0.2s;
  }

  .site-header__center .nav-link.active {
    font-family: 'ORG66', sans-serif;
    font-style: italic;
    font-weight: 700;
    font-size: 16px;
  }

  .site-header__center .nav-link:hover {
    opacity: 0.6;
  }

  .site-header__center .nav-separator {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
  }

  .site-header__right {
    text-align: right;
    padding-right: 30px;
  }

  .site-header__right span {
    font-family: 'SuisseIntl', sans-serif;
    font-weight: 400;
    font-size: 16px;
    text-transform: lowercase;
  }

  @media (max-width: 768px) {
    .site-header__container {
      flex-direction: column;
      gap: 1rem;
      padding: 1rem;
    }

    .site-header__left {
      padding-left: 0;
      width: 100%;
      text-align: center;
    }

    .site-header__right {
      padding-right: 0;
      width: 100%;
      text-align: center;
    }

    .site-header__center {
      order: 2;
      width: 100%;
      justify-content: center;
      gap: 0;
    }
  }
</style>
