---
interface Props {
  project: {
    title: string;
    type: string;
    year: string;
    image?: string;
  };
  view: 'grid' | 'list';
  base: string;
}

const { project, view, base } = Astro.props;
---

{view === 'grid' ? (
  <a href={`${base}project/${project.title.toLowerCase().replace(/\s+/g, '-')}`} class="project-card project-card--grid">
    {project.image && (
      <div class="project-card__image">
        <img src={project.image} alt={project.title} loading="lazy" />
      </div>
    )}
    <h3 class="project-card__title">{project.title}</h3>
  </a>
) : (
  <a href={`${base}project/${project.title.toLowerCase().replace(/\s+/g, '-')}`} class="project-card project-card--list">
    <div class="project-card__project">{project.title}</div>
    <div class="project-card__type">{project.type}</div>
    <div class="project-card__year">{project.year}</div>
  </a>
)}
