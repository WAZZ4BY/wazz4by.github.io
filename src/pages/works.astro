---
import BaseLayout from '../layouts/BaseLayout.astro';
import { getCollection } from 'astro:content';

const projects = await getCollection('projects');
const sortedProjects = projects.sort((a, b) => a.data.slug.localeCompare(b.data.slug));

// Получаем view из query параметров
const url = Astro.url;
const viewParam = url.searchParams.get('view') || 'grid';
const currentView = viewParam === 'list' ? 'list' : 'grid';
---

<BaseLayout title="Works">
  <main class="works-page">
    <div class="container">
      <div class="works-page__header">
        <h1>Works</h1>
        <div class="view-toggle">
          <a 
            href="/works?view=grid" 
            class={`view-toggle__btn ${currentView === 'grid' ? 'active' : ''}`}
          >
            Grid
          </a>
          <span class="view-toggle__separator">/</span>
          <a 
            href="/works?view=list" 
            class={`view-toggle__btn ${currentView === 'list' ? 'active' : ''}`}
          >
            List
          </a>
        </div>
      </div>

      {currentView === 'grid' ? (
        <div class="works-grid">
          {sortedProjects.map((project) => (
            <a href={`/project/${project.data.slug}`} class="work-card work-card--grid">
              <div class="work-card__image">
                <img src={project.data.cover} alt={project.data.title} loading="lazy" />
              </div>
              <h3 class="work-card__title">{project.data.title}</h3>
            </a>
          ))}
        </div>
      ) : (
        <div class="works-list">
          {sortedProjects.map((project) => (
            <a href={`/project/${project.data.slug}`} class="work-card work-card--list">
              <div class="work-card__project col-6">{project.data.title}</div>
              <div class="work-card__type col-4">Project</div>
              <div class="work-card__year col-2">2024</div>
            </a>
          ))}
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .works-page {
    padding-top: 6rem;
    padding-bottom: 4rem;
  }

  .works-page__header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    margin-bottom: 3rem;
  }

  .view-toggle {
    display: flex;
    align-items: center;
    gap: 0.5rem;
  }

  .view-toggle__btn {
    transition: opacity 0.2s;
  }

  .view-toggle__btn:hover {
    opacity: 0.6;
  }

  .view-toggle__btn.active {
    font-weight: 600;
  }

  .view-toggle__separator {
    opacity: 0.4;
  }

  /* Grid View */
  .works-grid {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 2rem;
  }

  .work-card--grid {
    grid-column: span 4;
    text-decoration: none;
    color: inherit;
    transition: transform 0.2s;
  }

  .work-card--grid:hover {
    transform: translateY(-4px);
  }

  .work-card__image {
    width: 100%;
    aspect-ratio: 4 / 3;
    overflow: hidden;
    background: #f0f0f0;
    margin-bottom: 1rem;
  }

  .work-card__image img {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .work-card__title {
    font-size: 1.25rem;
    font-weight: 600;
  }

  /* List View */
  .works-list {
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 1rem 0;
  }

  .work-card--list {
    display: contents;
    text-decoration: none;
    color: inherit;
    transition: opacity 0.2s;
  }

  .work-card--list:hover {
    opacity: 0.6;
  }

  .work-card__project,
  .work-card__type,
  .work-card__year {
    padding: 0.5rem 0;
  }

  @media (max-width: 768px) {
    .works-page {
      padding-top: 5rem;
    }

    .works-page__header {
      flex-direction: column;
      align-items: flex-start;
      gap: 1rem;
    }

    .work-card--grid {
      grid-column: span 12;
    }

    .work-card--list {
      display: block;
    }

    .work-card__project,
    .work-card__type,
    .work-card__year {
      display: block;
      margin-bottom: 0.5rem;
    }
  }
</style>
