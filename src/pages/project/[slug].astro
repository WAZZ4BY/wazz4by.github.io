---
import BaseLayout from '../../layouts/BaseLayout.astro';
import { getProjects, getProjectBySlug } from '../../lib/projects';

export async function getStaticPaths() {
  const projects = getProjects();
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: import('../../lib/projects').Project;
}

const { project } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<BaseLayout title={project.title} variant="inner">
  <main class="project-page">
    <div class="project-page__wrap">
      <a href={`${base}index/`} class="back-link">← Back to Index</a>
      <a href={`${base}admin/edit/?id=${encodeURIComponent(project.id)}`} class="project-page__edit">Редактировать</a>
      <h1 class="project-title">{project.title}</h1>
      {project.description && (
        <p class="project-description">{project.description}</p>
      )}
      {project.images && project.images.length > 0 && (
        <div class="project-gallery">
          {project.images.map((src) => (
            <div class="project-gallery__item">
              <img src={src} alt={project.title} loading="lazy" />
            </div>
          ))}
        </div>
      )}
    </div>
  </main>
</BaseLayout>

<style>
  .project-page {
    min-height: 100vh;
    padding: 6rem var(--grid-margin) 4rem;
    background: #FBFBFB;
  }

  .project-page__wrap {
    max-width: 100%;
  }

  .back-link {
    display: inline-block;
    margin-bottom: 2rem;
    color: #666;
    text-decoration: none;
    font-size: 0.9rem;
    transition: color 0.2s;
  }

  .back-link:hover {
    color: #000;
  }

  .project-page__edit {
    display: inline-block;
    margin-left: 1rem;
    font-size: 0.9rem;
    color: #666;
  }

  .project-page__edit:hover {
    color: #000;
  }

  .project-title {
    font-size: 2.5rem;
    font-weight: 700;
    margin-bottom: 1rem;
  }

  .project-description {
    font-size: 1rem;
    line-height: 1.6;
    margin-bottom: 2rem;
  }

  .project-gallery {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 1.5rem;
  }

  .project-gallery__item {
    width: 100%;
    overflow: hidden;
    background: #D9D9D9;
  }

  .project-gallery__item img {
    width: 100%;
    height: auto;
    display: block;
  }

  @media (max-width: 768px) {
    .project-title {
      font-size: 1.75rem;
    }
  }
</style>
