---
import BaseLayout from '../../layouts/BaseLayout.astro';
import InnerPageHeader from '../../components/InnerPageHeader.astro';
import { getProjects, getContentBlocks } from '../../lib/projects';

export async function getStaticPaths() {
  const projects = getProjects();
  return projects.map((project) => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: import('../../lib/projects').Project;
}

const { project } = Astro.props;
const base = import.meta.env.BASE_URL;
const blocks = getContentBlocks(project);
---

<BaseLayout title={project.title} variant="inner" bodyClass="page-project" hideHeader>
  <div class="inner-page" style={project.backgroundColor ? { background: project.backgroundColor } : undefined}>
    <main class="project-page" style={project.backgroundColor ? { background: project.backgroundColor } : undefined}>
      <div class="project-page__grid">
        <InnerPageHeader activePage="project" />
        <a href={`${base}admin/edit/?id=${encodeURIComponent(project.id)}`} class="project-page__edit">Редактировать</a>
        <h1 class="project-title">{project.title}</h1>
        <div class="project-meta">
          <span class="project-meta__label">Type</span>
          <span class="project-meta__value">{project.type || '—'}</span>
          <span class="project-meta__label">Year</span>
          <span class="project-meta__value">{project.year || '—'}</span>
        </div>
        <hr class="project-title-line" aria-hidden="true" />
        <div class="project-page__content">
          {blocks.map((block) => {
            if (block.type === 'image') {
              return (
                <div class="project-block project-block--image">
                  <img src={block.src} alt={project.title} loading="lazy" />
                </div>
              );
            }
            if (block.type === 'text') {
              return (
                <div class="project-block project-block--text" set:html={block.content}></div>
              );
            }
            if (block.type === 'split') {
              return (
                <div class="project-block project-block--split">
                  <div class="project-block__split-item"><img src={block.left} alt={project.title} loading="lazy" /></div>
                  <div class="project-block__split-item"><img src={block.right} alt={project.title} loading="lazy" /></div>
                </div>
              );
            }
            if (block.type === 'video') {
              return (
                <div class="project-block project-block--video">
                  <div class="project-block__video-wrap" set:html={block.embed}></div>
                </div>
              );
            }
            return null;
          })}
        </div>
        <p class="index-footer__text">The combination of robust classical typography with a clear vision of the path and experimental visualization is a true balance between chaotic trash art and an academic approach.</p>
        <div class="index-footer__name">Vasily Aleev</div>
        <div class="index-footer__links"><a href="https://www.instagram.com/wazz4by" target="_blank" rel="noopener noreferrer">Ig</a><br/><a href="https://t.me/waz4by" target="_blank" rel="noopener noreferrer">Tg</a><br/><a href="https://www.behance.net/wazz4by/" target="_blank" rel="noopener noreferrer">Be</a></div>
      </div>
    </main>
  </div>
</BaseLayout>

<style>
  /* Футер прижат к низу: inner-page и project-page — flex-колонка, сетка растягивается */
  :global(body.page-project .inner-page) {
    display: flex;
    flex-direction: column;
    min-height: 100vh;
  }

  .project-page {
    flex: 1;
    display: flex;
    flex-direction: column;
    min-height: 0;
    padding: 0 0 4rem;
    background: #FBFBFB;
  }

  .project-page__grid {
    flex: 1;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    grid-template-rows: auto auto auto auto 1fr auto;
    gap: 0 var(--grid-gutter);
    max-width: 100%;
    min-height: 0;
  }

  :global(body.page-project .project-page__grid .page-header) {
    grid-column: 1 / -1;
    grid-row: 1;
  }

  .project-page__edit {
    grid-column: 1 / -1;
    grid-row: 2;
    display: inline-block;
    margin-left: 1rem;
    margin-bottom: 0;
    font-size: 0.9rem;
    color: #666;
  }

  .project-page__edit:hover {
    color: #000;
  }

  .project-title {
    grid-column: 1 / 7;
    grid-row: 3;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 64px;
    font-weight: 700;
    letter-spacing: -3px;
    margin-top: 290px;
    margin-bottom: 0;
    line-height: 1;
  }

  .project-meta {
    grid-column: 7 / 9;
    grid-row: 3;
    align-self: start;
    margin-top: 290px;
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.25em var(--grid-gutter);
    align-items: baseline;
  }

  /* Колонка 7: подписи как в заголовке списка проектов (12px) */
  .project-meta__label {
    grid-column: 1;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: black;
  }

  /* Колонка 8: значения как в списке проектов (28px) */
  .project-meta__value {
    grid-column: 2;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 12px;
    font-weight: 500;
    line-height: 1;
    color: black;
  }

  .project-title-line {
    grid-column: 1 / -1;
    grid-row: 4;
    margin: 50px 0;
    border: none;
    border-bottom: 1.5pt solid black;
    opacity: 0.5;
  }

  .project-page__content {
    grid-column: 1 / -1;
    grid-row: 5;
    display: grid;
    grid-template-columns: repeat(12, 1fr);
    gap: 0 var(--grid-gutter);
    align-content: start;
  }

  .project-block {
    min-width: 0;
  }

  .project-block--image {
    grid-column: 1 / -1;
    margin: 50px 0;
  }

  .project-block--image img {
    width: 100%;
    height: auto;
    display: block;
    vertical-align: top;
  }

  .project-block--video {
    grid-column: 1 / -1;
    margin: 50px 0;
  }

  .project-block__video-wrap {
    position: relative;
    width: 100%;
    padding-bottom: 56.25%;
    overflow: hidden;
  }

  .project-block__video-wrap :global(iframe) {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    border: none;
  }

  .project-block--text {
    grid-column: 5 / -1;
    margin: 50px 0;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 16pt;
    font-weight: 500;
    color: black;
    line-height: 1;
  }

  .project-block--text :global(p) {
    margin: 0 0 0.5em;
  }

  .project-block--text :global(p:last-child) {
    margin-bottom: 0;
  }

  .project-block--split {
    grid-column: 1 / -1;
    margin: 50px 0;
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 0 var(--grid-gutter);
  }

  .project-block__split-item {
    min-width: 0;
    overflow: hidden;
  }

  .project-block__split-item img {
    width: 100%;
    height: auto;
    display: block;
    vertical-align: top;
  }

  /* Футер как на index: колонки 7–11 (текст), 11 (имя), 12 (ссылки) */
  :global(body.page-project .project-page__grid .index-footer__text) {
    grid-column: 7 / 11;
    grid-row: 6;
    margin-top: 50px;
    margin-bottom: 30px;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 12px;
    font-weight: 500;
    color: black;
    opacity: 1;
    line-height: 1;
  }
  :global(body.page-project .project-page__grid .index-footer__name) {
    grid-column: 11;
    grid-row: 6;
    margin-top: 50px;
    margin-bottom: 30px;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 16pt;
    font-weight: 500;
    color: black;
    line-height: 1;
  }
  :global(body.page-project .project-page__grid .index-footer__links) {
    grid-column: 12;
    grid-row: 6;
    margin-top: 50px;
    margin-bottom: 30px;
    font-family: 'SuisseIntl', sans-serif;
    font-size: 16pt;
    font-weight: 500;
    color: black;
    text-align: right;
    line-height: 1;
  }

  @media (max-width: 768px) {
    .project-title {
      font-size: 2.5rem;
      letter-spacing: -0.02em;
    }
    .project-meta {
      margin-top: 2rem;
    }
  }
</style>
