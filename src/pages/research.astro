---
import BaseLayout from '../layouts/BaseLayout.astro';

// Mock data
const researchItems = [
  { id: 1, image: '/images/research-1.jpg', title: 'Research 1' },
  { id: 2, image: '/images/research-2.jpg', title: 'Research 2' },
  { id: 3, image: '/images/research-3.jpg', title: 'Research 3' },
  { id: 4, image: '/images/research-4.jpg', title: 'Research 4' },
  { id: 5, image: '/images/research-5.jpg', title: 'Research 5' },
  { id: 6, image: '/images/research-6.jpg', title: 'Research 6' },
  { id: 7, image: '/images/research-7.jpg', title: 'Research 7' },
  { id: 8, image: '/images/research-8.jpg', title: 'Research 8' },
  { id: 9, image: '/images/research-9.jpg', title: 'Research 9' },
  { id: 10, image: '/images/research-10.jpg', title: 'Research 10' },
];
---

<BaseLayout title="Research" variant="inner">
  <main class="research-page">
    <div class="container">
      <h1>Research</h1>
      
      <div class="research-grid">
        {researchItems.map((item) => (
          <div class="research-card">
            <div class="research-card__image">
              <img src={item.image} alt={item.title} loading="lazy" />
            </div>
          </div>
        ))}
      </div>
    </div>
  </main>
</BaseLayout>
